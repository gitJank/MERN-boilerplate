{
    "extends": [
        "airbnb",
        "prettier"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 2018,
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true
        }
    },
    "settings": {
        "import/resolver": {
            "webpack": {
                "config": "./webpack/webpack.prod.config.js"
            }
        }
    },
    "env": {
        "browser": true,
        "node": true,
        "es6": true,
        "mocha": true
    },
    "rules": {
        "arrow-body-style": 0,
        "arrow-parens": [
            "error",
            "as-needed"
        ],
        "no-underscore-dangle": [
            "error",
            {
                "allow": [
                    "foo_",
                    "_bar"
                ]
            }
        ],
        "class-methods-use-this": 0,
        "comma-dangle": [
            "error",
            "never"
        ],
        "jsx-a11y/label-has-for": [
            0
        ],
        "quotes": [
            "error",
            "single"
        ],
        "no-unused-vars": [
            "error",
            {
                "vars": "local",
                "args": "after-used",
                "argsIgnorePattern": "^_"
            }
        ],
        "no-unused-expressions": [
            2,
            {
                "allowTernary": true
            }
        ],
        "no-confusing-arrow": 0,
        "implicit-arrow-linebreak": 0,
        "global-require": 0,
        "import/no-named-as-default": 0,
        "object-curly-newline": 0,
        "react/forbid-prop-types": 0,
        "react/jsx-one-expression-per-line": 0,
        "react/jsx-wrap-multilines": 0,
        "react/jsx-filename-extension": [
            1,
            {
                "extensions": [
                    ".js",
                    ".jsx"
                ]
            }
        ]
    },
    "overrides": [
        {
            "files": [
                "*.spec.js"
            ],
            "rules": {
                "no-unused-expressions": 0
            }
        }
    ]
}